<div class="span10 offset1" id="p">
    <legend>All products</legend>
    @foreach (var p in Model)
    {
        var url = "/Images/products/" + p.Id + ".jpg";
        <div class="row">
            <div class="span4">
                <img height="200" width="400" src="@url" />
            </div>

            <div class="span4 offset1">
                <p><b>Product Name </b>: @p.Name</p>
         @if (p.Quantity > 0)
            {
                <p><b>Availability: <span style="color:green">In Stock</span></b></p>
            }
            else
            {
                <p><b>Availability: <span style="color:red">Out of Stock</span></b></p>
            }
                       <p><b>Product Price </b>: @p.Price</p>
           <br />

                <button class="btn btn-primary btn-large" onclick="@("window.location.href='" + @Url.Action("ViewProduct", "Product", new { id = p.Id })+"'");">View Detail</button>

            </div>
        </div><br />
        <hr />
    }
</div>

